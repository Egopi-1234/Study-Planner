<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- Top App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurface"
        android:theme="@style/ThemeOverlay.Material3.ActionBar">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            style="@style/Widget.Material3.Toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="3: Locating Python Modules"
            app:titleCentered="true" />

        <!-- Module Progress Line -->
        <LinearLayout
            android:id="@+id/moduleProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5"
            android:layout_margin="16dp"
            android:clipToPadding="false"
            android:padding="0dp">

            <!-- Step 1 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="12sp"
                    android:textColor="@android:color/black"
                    android:textIsSelectable="true"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginTop="4dp"
                    android:background="#0047FF"/>
            </LinearLayout>

            <!-- Step 2 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textSize="12sp"
                    android:textColor="@android:color/black"
                    android:textIsSelectable="true"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginTop="4dp"
                    android:background="#0047FF"/>
            </LinearLayout>

            <!-- Step 3 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textSize="12sp"
                    android:textColor="@android:color/black"
                    android:textIsSelectable="true"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginTop="4dp"
                    android:background="#E43C3C" />
            </LinearLayout>

            <!-- Step 4 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textSize="12sp"
                    android:textColor="@android:color/black"
                    android:textIsSelectable="true"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginTop="4dp"
                    android:background="@color/grey_300"/>
            </LinearLayout>

            <!-- Step 5 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textSize="12sp"
                    android:textColor="@android:color/black"
                    android:textIsSelectable="true"/>

                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginTop="4dp"
                    android:background="@color/grey_300"/>
            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Main Content -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <!-- Scrollable Section -->
        <androidx.core.widget.NestedScrollView
            android:id="@+id/scroll"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fillViewport="true"
            android:padding="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btn3"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="LOCATING PYTHON MODULES"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:textSize="14sp"
                    android:paddingBottom="8dp"
                    android:textIsSelectable="true"/>

                <TextView
                    android:id="@+id/intro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="When you import a module in Python, the interpreter needs to know where to find that module. Python uses a search path to locate modules."
                    android:textSize="13sp"
                    android:lineSpacingExtra="2dp"
                    android:textIsSelectable="true"/>

                <TextView
                    android:id="@+id/searchOrderTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="\nSearch order when importing a module:"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textIsSelectable="true"/>

                <TextView
                    android:id="@+id/searchOrder"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="1. Current directory of the running script\n2. PYTHONPATH environment variable (if set)\n3. Standard library directories (e.g., Lib/)\n4. Site-packages directory (where external packages are installed)"
                    android:textSize="13sp"
                    android:lineSpacingExtra="2dp"
                    android:textIsSelectable="true"/>

                <TextView
                    android:id="@+id/sysPathTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="\nViewing the module search path:"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textIsSelectable="true"/>

                <TextView
                    android:id="@+id/sysPathCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="import sys\nprint(sys.path)"
                    android:background="#F5F5F5"
                    android:padding="8dp"
                    android:textSize="13sp"
                    android:typeface="monospace"
                    android:lineSpacingExtra="2dp"
                    android:textIsSelectable="true"/>

                <TextView
                    android:id="@+id/sysPathExplain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="The sys.path list shows all the directories where Python looks for modules. You can add new paths to this list at runtime."
                    android:textSize="13sp"
                    android:lineSpacingExtra="2dp"
                    android:textIsSelectable="true"/>

                <TextView
                    android:id="@+id/addPathTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="\nAdding custom paths:"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textIsSelectable="true"/>

                <TextView
                    android:id="@+id/addPathCode"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="import sys\nsys.path.append('/path/to/my/modules')\n\nimport mymodule"
                    android:background="#F5F5F5"
                    android:padding="8dp"
                    android:textSize="13sp"
                    android:typeface="monospace"
                    android:lineSpacingExtra="2dp"
                    android:textIsSelectable="true"/>

                <TextView
                    android:id="@+id/pythonPathTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="\nUsing PYTHONPATH environment variable:"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textIsSelectable="true"/>

                <TextView
                    android:id="@+id/pythonPathExplain"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="You can also set an environment variable PYTHONPATH to include extra directories where Python should look for modules."
                    android:textSize="13sp"
                    android:lineSpacingExtra="2dp"
                    android:textIsSelectable="true"/>

                <TextView
                    android:id="@+id/pythonPathExample"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="On Windows:\n   set PYTHONPATH=C:\\Users\\Me\\PythonModules\n\nOn Linux/Mac:\n   export PYTHONPATH=/home/me/PythonModules"
                    android:background="#F5F5F5"
                    android:padding="8dp"
                    android:textSize="13sp"
                    android:typeface="monospace"
                    android:lineSpacingExtra="2dp"
                    android:textIsSelectable="true"/>

                <TextView
                    android:id="@+id/note"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="\n🔑 Note: If a module is not found, Python raises a ModuleNotFoundError."
                    android:textStyle="italic"
                    android:textSize="13sp"
                    android:lineSpacingExtra="2dp"
                    android:textIsSelectable="true"/>

                <TextView
                    android:id="@+id/summaryTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="\nSummary:"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textIsSelectable="true"/>

                <TextView
                    android:id="@+id/summary"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="• Python searches modules in current directory, PYTHONPATH, standard library, and site-packages.\n• sys.path shows the current search order.\n• You can extend the search path dynamically or by setting PYTHONPATH.\n• If a module cannot be found, Python raises ModuleNotFoundError."
                    android:textSize="13sp"
                    android:lineSpacingExtra="2dp"
                    android:textIsSelectable="true"/>

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <!-- Bottom Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btn3"
            style="@style/Widget.Material3.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Next"
            android:layout_margin="16dp"
            app:cornerRadius="28dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />
    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
