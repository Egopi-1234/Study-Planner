<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="#FFFFFF">

    <!-- Top Bar with Back Button -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:padding="8dp">

        <ImageView
            android:id="@+id/bkarrow"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:contentDescription="Back"
            android:src="@drawable/backarrow"/>

        <!-- You can add a title here if needed -->
    </LinearLayout>

    <!-- Scrollable Lessons -->
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:divider="?android:attr/dividerVertical"
            android:showDividers="middle">

            <!-- Lesson 1 -->
            <TextView
                android:id="@+id/lesson1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edittextbg"
                android:backgroundTint="#E0E0E0"
                android:backgroundTintMode="multiply"
                android:elevation="3dp"
                android:padding="16dp"
                android:text="1: Introduction of Python"
                android:textColor="#000000"
                android:textSize="18sp" />

            <!-- Lesson 2 -->
            <TextView
                android:id="@+id/lesson2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edittextbg"
                android:backgroundTint="#E0E0E0"
                android:elevation="3dp"
                android:padding="16dp"
                android:text="2: Import module in Python"
                android:textColor="#000000"
                android:textSize="18sp" />

            <!-- Lesson 3 -->
            <TextView
                android:id="@+id/lesson3"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edittextbg"
                android:backgroundTint="#E0E0E0"
                android:elevation="3dp"
                android:padding="16dp"
                android:text="3: Locating Python Modules"
                android:textColor="#000000"
                android:textSize="18sp" />

            <!-- Lesson 4 -->
            <TextView
                android:id="@+id/lesson4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edittextbg"
                android:backgroundTint="#E0E0E0"
                android:elevation="3dp"
                android:padding="16dp"
                android:text="4: Python Built-in modules"
                android:textColor="#000000"
                android:textSize="18sp" />

            <!-- Lesson 5 -->
            <TextView
                android:id="@+id/lesson5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edittextbg"
                android:backgroundTint="#E0E0E0"
                android:elevation="3dp"
                android:padding="16dp"
                android:text="5: Conclusion of Python"
                android:textColor="#000000"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/lesson6"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="16dp"
                android:layout_marginBottom="10dp"
                android:background="@drawable/edittextbg"
                android:backgroundTint="#E0E0E0"
                android:elevation="3dp"
                android:padding="16dp"
                android:text="Quiz/Test(Optional)"
                android:textColor="#000000"
                android:textSize="18sp" />

        </LinearLayout>
    </ScrollView>

</LinearLayout>
