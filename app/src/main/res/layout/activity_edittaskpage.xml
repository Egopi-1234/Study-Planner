<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Header Bar -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical"
            android:orientation="horizontal"
            android:paddingBottom="16dp">

            <ImageView
                android:id="@+id/back_arrow"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:contentDescription="Back"
                android:src="@drawable/backarrow" />

            <TextView
                android:layout_width="0dp"
                android:layout_height="39dp"
                android:layout_weight="1"
                android:gravity="center"
                android:text="Edit Task"
                android:textColor="#0000FF"
                android:textSize="24sp"
                android:textStyle="bold" />

            <ImageView
                android:id="@+id/submit_button"
                android:layout_width="44dp"
                android:layout_height="43dp"
                android:contentDescription="Save"
                android:padding="8dp"
                android:src="@drawable/ticklogo" />
        </LinearLayout>

        <!-- Divider -->
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#CCCCCC" />

        <!-- Task Name -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="35dp"
            android:text="Task name"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_task_name"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Blockchain"
            android:textColorHint="#7B5E5E"
            android:background="@drawable/edittextbg"
            android:padding="10dp"
            android:layout_marginTop="4dp" />

        <!-- Task Description / Notes -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Task Description /Notes"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_task_description"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Complete Assignment 2"
            android:textColorHint="#7B5E5E"
            android:background="@drawable/edittextbg"
            android:padding="10dp"
            android:layout_marginTop="4dp" />

        <!-- Due Date -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Due Date"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:background="@drawable/edittextbg"
            android:padding="12dp"
            android:layout_marginBottom="16dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/edit_task_date"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:clickable="true"
                android:focusable="true"
                android:text="Select Date"
                android:textColor="#7C6F6F"
                android:textSize="18sp" />

            <ImageView
                android:id="@+id/edit_task_calendar"
                android:layout_width="24dp"
                android:layout_height="24dp"
                android:contentDescription="Calendar Icon"
                android:src="@drawable/calender" />
        </LinearLayout>

        <!-- Due Time -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Due time"
            android:textSize="16sp"
            android:textStyle="bold" />

        <EditText
            android:id="@+id/edit_task_time"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Select Time"
            android:background="@drawable/edittextbg"
            android:padding="12dp"
            android:textColorHint="#7C6F6F"
            android:focusable="false"
            android:clickable="true"
            android:layout_marginBottom="16dp" />

        <!-- Priority -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"
            android:text="Priority"
            android:textSize="16sp"
            android:textStyle="bold" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center"
            android:background="@drawable/edittextbg"
            android:padding="8dp"
            android:layout_marginBottom="24dp">

            <Button
                android:id="@+id/edit_priority_high"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="High"
                android:backgroundTint="@color/blue"
                android:textColor="#FFFFFF" />

            <Button
                android:id="@+id/edit_priority_medium"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Medium"
                android:backgroundTint="@color/green"
                android:textColor="#FFFFFF"
                android:layout_marginHorizontal="4dp" />

            <Button
                android:id="@+id/edit_priority_low"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="Low"
                android:backgroundTint="@color/brown"
                android:textColor="#FFFFFF" />
        </LinearLayout>

    </LinearLayout>
</ScrollView>
