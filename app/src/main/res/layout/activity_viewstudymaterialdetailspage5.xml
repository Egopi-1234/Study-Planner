<?xml version="1.0" encoding="utf-8"?>
<androidx.coordinatorlayout.widget.CoordinatorLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/root"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fitsSystemWindows="true">

    <!-- Top App Bar -->
    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appbar"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="?attr/colorSurface"
        android:theme="@style/ThemeOverlay.Material3.ActionBar">

        <com.google.android.material.appbar.MaterialToolbar
            android:id="@+id/toolbar"
            style="@style/Widget.Material3.Toolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            app:title="4: Python Built-in Modules"
            app:titleCentered="true" />

        <!-- Module Progress Line -->
        <LinearLayout
            android:id="@+id/moduleProgress"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="5"
            android:layout_margin="16dp"
            android:clipToPadding="false"
            android:padding="0dp">

            <!-- Steps 1-5 -->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="1"
                    android:textSize="12sp"
                    android:textColor="@android:color/black"
                    android:textIsSelectable="true"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginTop="4dp"
                    android:background="#0047FF"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="2"
                    android:textSize="12sp"
                    android:textColor="@android:color/black"
                    android:textIsSelectable="true"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginTop="4dp"
                    android:background="#0047FF"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="3"
                    android:textSize="12sp"
                    android:textColor="@android:color/black"
                    android:textIsSelectable="true"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginTop="4dp"
                    android:background="#0047FF"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="4"
                    android:textSize="12sp"
                    android:textColor="@android:color/black"
                    android:textIsSelectable="true"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginTop="4dp"
                    android:background="#E43C3C"/>
            </LinearLayout>

            <LinearLayout
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:orientation="vertical"
                android:gravity="center_horizontal">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="5"
                    android:textSize="12sp"
                    android:textColor="@android:color/black"
                    android:textIsSelectable="true"/>
                <View
                    android:layout_width="match_parent"
                    android:layout_height="8dp"
                    android:layout_marginTop="4dp"
                    android:background="@color/grey_300"/>
            </LinearLayout>

        </LinearLayout>
    </com.google.android.material.appbar.AppBarLayout>

    <!-- Content + Bottom Button -->
    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/contentContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_behavior="@string/appbar_scrolling_view_behavior">

        <androidx.core.widget.NestedScrollView
            android:id="@+id/scroll"
            android:layout_width="0dp"
            android:layout_height="0dp"
            android:fillViewport="true"
            android:clipToPadding="false"
            android:padding="16dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toTopOf="@id/btnNext5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

                <!-- Heading -->
                <TextView
                    android:id="@+id/heading"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="PYTHON MODULE 4 NOTES"
                    android:textStyle="bold"
                    android:textAllCaps="true"
                    android:textSize="14sp"
                    android:letterSpacing="0.05"
                    android:paddingBottom="8dp"
                    android:textIsSelectable="true" />

                <!-- Intro -->
                <TextView
                    android:id="@+id/intro"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="Python comes with a rich set of **built-in modules** that make programming faster and easier. These modules provide pre-written code for performing tasks such as working with math, random numbers, dates, system-level operations, file management, and much more."
                    android:textSize="13sp"
                    android:lineSpacingExtra="2dp"
                    android:textIsSelectable="true" />

                <!-- Section 1 -->
                <TextView
                    android:id="@+id/mathTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="\n1. math Module:"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textIsSelectable="true" />

                <TextView
                    android:id="@+id/mathContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="The math module provides mathematical functions like square root, trigonometry, logarithms, and constants like pi and e.\n\nExample:\nimport math\nprint(math.sqrt(16))   # 4.0\nprint(math.pi)         # 3.14159..."
                    android:textSize="13sp"
                    android:lineSpacingExtra="2dp"
                    android:textIsSelectable="true" />

                <!-- Section 2 -->
                <TextView
                    android:id="@+id/randomTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="\n2. random Module:"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textIsSelectable="true" />

                <TextView
                    android:id="@+id/randomContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="The random module is used to generate random numbers, shuffle lists, and pick random elements.\n\nExample:\nimport random\nprint(random.randint(1, 10))\nprint(random.choice(['apple', 'banana', 'cherry']))"
                    android:textSize="13sp"
                    android:lineSpacingExtra="2dp"
                    android:textIsSelectable="true" />

                <!-- Section 3 -->
                <TextView
                    android:id="@+id/datetimeTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="\n3. datetime Module:"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textIsSelectable="true" />

                <TextView
                    android:id="@+id/datetimeContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="The datetime module lets you work with dates and times.\n\nExample:\nimport datetime\nnow = datetime.datetime.now()\nprint(now)\nprint(now.strftime('%Y-%m-%d %H:%M:%S'))"
                    android:textSize="13sp"
                    android:lineSpacingExtra="2dp"
                    android:textIsSelectable="true" />

                <!-- Section 4 -->
                <TextView
                    android:id="@+id/osTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="\n4. os Module:"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textIsSelectable="true" />

                <TextView
                    android:id="@+id/osContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="The os module helps interact with the operating system: create folders, list files, get environment variables.\n\nExample:\nimport os\nprint(os.getcwd())\nos.mkdir('test_folder')"
                    android:textSize="13sp"
                    android:lineSpacingExtra="2dp"
                    android:textIsSelectable="true" />

                <!-- Section 5 -->
                <TextView
                    android:id="@+id/sysTitle"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="\n5. sys Module:"
                    android:textStyle="bold"
                    android:textSize="14sp"
                    android:textIsSelectable="true" />

                <TextView
                    android:id="@+id/sysContent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="The sys module gives system-specific parameters and functions. You can use it to work with command-line arguments or exit programs.\n\nExample:\nimport sys\nprint(sys.version)\nsys.exit()"
                    android:textSize="13sp"
                    android:lineSpacingExtra="2dp"
                    android:textIsSelectable="true" />

                <!-- Conclusion -->
                <TextView
                    android:id="@+id/conclusion"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:text="\n✅ Python’s built-in modules save a lot of time and effort. Instead of writing everything from scratch, you can directly use these modules for everyday programming tasks."
                    android:textSize="13sp"
                    android:textStyle="italic"
                    android:lineSpacingExtra="2dp"
                    android:textIsSelectable="true" />

            </LinearLayout>
        </androidx.core.widget.NestedScrollView>

        <!-- Next Button -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnNext5"
            style="@style/Widget.Material3.Button"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:text="Next"
            android:layout_margin="16dp"
            app:cornerRadius="28dp"
            app:iconPadding="0dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.coordinatorlayout.widget.CoordinatorLayout>
